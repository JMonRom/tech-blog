<article>
  <h2>
    Edit Post
  </h2>
  <form class="editForm">
    <div>
      <input type="text" name="post-title" value="{{post.title}}"/>
    </div>
    <div>
      Posted on {{format_date post.created_at}} | {{post.commentslength}} {{format_plural "comment" post.comments.length}}
    </div>
    <div>
      <label for="post-text">Post</label>
      <textarea name="post-text" id="post-text">{{post.post_text}}</textarea>
    </div>
    <button type="submit"> Save </button>
    <button type="button" class="deletePostBtn"> Delete Post </button>
  </form>
</article>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>