<article class="post">
  <div class="post-Style">
    <div class="title">
      <a href="/post{{id}}">{{title}}</a>
    </div>
    <div class="meta">
      Posted by {{user.username}} on {{format_date created_at}} | {{comment.length}} {{format_plural comment.length}}
    </div>
  </div>
  <div class="post-text">
    {{post_text}}
  </div>
</article>